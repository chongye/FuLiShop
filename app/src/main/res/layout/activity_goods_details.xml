<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cn.ucai.hailegou.activity.GoodsDetailsActivity">
    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_orange"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_Gd_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" 
            android:src="@mipmap/back_nomal"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="商品详情"
            android:textSize="20sp"
            android:textColor="#fff"/>
        <ImageView
            android:id="@+id/iv_Gd_collect"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_collect_in"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_Gd_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/bg_cart_selected"/>
            <TextView
                android:id="@+id/details_cartCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#00F"/>
        </RelativeLayout>
        <!--<ImageView
            android:id="@+id/iv_Gd_cart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_cart_selected"/>-->
        <ImageView
            android:id="@+id/iv_Gd_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_share_bg"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_GoodsMessage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout_title"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        >
        <TextView
            android:id="@+id/tv_Gb_EnglishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="英文名"/>
        <TextView
            android:id="@+id/tv_Gb_ChineseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="中文名"/>
        <TextView
            android:id="@+id/tv_Gb_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="价格"
            android:textColor="#f00"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_GoodsMessage"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="60dp">
        <cn.ucai.hailegou.views.SlideAutoLoopView
            android:id="@+id/Salv"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:background="@color/good_detail_bg_white"/>
        <cn.ucai.hailegou.views.FlowIndicator
            android:id="@+id/indicator"
            android:layout_below="@id/Salv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:count="4"
            app:focus="0"
            app:focus_color="@color/good_detaul_flow_indicator_focus"
            app:normal_color="#a1d1d1d1"
            app:r="5dp"
            app:space="3dp"/>
        <WebView
            android:id="@+id/wv_Goods"
            android:layout_below="@id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="商品信息"/>
    </RelativeLayout>

</RelativeLayout>
