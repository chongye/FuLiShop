<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.ucai.fulishop.fragment.PersonalFragment">
    <RelativeLayout
        android:id="@+id/layout_login_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/good_detail_bg_white">
        <ImageView
            android:id="@+id/backClickArea"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/tv_common_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="账户登录"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_toRightOf="@id/backClickArea"
            android:layout_marginRight="50dp"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/et_UserName"
        android:layout_below="@id/layout_login_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/good_detail_bg_white"
        android:layout_margin="10dp"
        android:hint="用户名"
        android:drawableRight="@drawable/icon_account"
        />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/good_detail_bg_white"
        android:layout_below="@id/et_UserName"
        android:layout_margin="10dp"
        android:hint="密码"
        android:drawableRight="@drawable/icon_pwd"/>
    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main_orange"
        android:layout_below="@id/et_password"
        android:layout_margin="40dp"
        android:text="登录"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/bt_register"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/bt_login"
        android:layout_centerHorizontal="true"
        android:background="@color/holo_orange_light"
        android:text="注册"
        android:textSize="30sp"/>
</RelativeLayout>
