<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/good_detail_bg_white">
    <ImageView
        android:id="@+id/iv_category_group"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/category_child"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/tv_category_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分类"
        android:layout_toRightOf="@id/iv_category_group"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:id="@+id/iv_expand"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:src="@mipmap/expand_on"/>
</RelativeLayout>